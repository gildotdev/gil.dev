---
const { title, isHome = false, frontmatter, description } = Astro.props;
const defaultDescription = "Technologist and Developer";
import Footer from "../components/Footer.astro";
import LatestNotes from "../components/LatestNotes.astro";
import SocialLinks from "../components/SocialLinks.astro";
import WiggleWrap from "../components/WiggleWrap.astro";
import avatar from "../assets/avatar-pink-tv.jpeg";
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta charset="utf-8" />
    <title>Gil Creque - {title || frontmatter?.title}</title>
    <meta
      name="description"
      content={description || frontmatter?.description || defaultDescription}
    />
    <meta name="author" content="Gil Creque" />

    <!-- Google Site Verification
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta
      name="google-site-verification"
      content="baTB5HjY84P_avk0rfsFGUFu6_CqqmyNZUh13QCsLM8"
    />

    <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

    <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

    <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="/img/avatar-pink-tv.jpeg"
      sizes="16x16"
    />
    <link
      rel="icon"
      type="image/x-icon"
      href="/img/avatar-pink-tv.jpeg"
      sizes="16x16"
    />
    <link rel="apple-touch-icon-precomposed" href="/img/avatar-pink-tv.jpeg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed for gil.dev"
      href="/rss.xml"
    />
    <ViewTransitions />
  </head>
  <body class="dark:bg-stone-800 dark:text-violet-50 max-w-3xl mx-auto">
    <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->

    <header
      class="flex flex-col md:flex-row px-2 w-screen max-w-3xl items-center justify-center"
    >
      {
        isHome ? (
          <>
            <img
              id="avatar"
              transition:name="avatar"
              src={avatar.src}
              alt="Photo of Gil Creque in a pink TV"
              height="400px"
              width="400px"
              class="rounded-full"
            />
            <p class="slab mb-0 pb-0">&nbsp;Hello, I'm&nbsp;</p>
            <h1 class="mb-0">
              <WiggleWrap>Gil Creque</WiggleWrap>
            </h1>
          </>
        ) : (
          <>
            <a href="/">
              <img
                id="avatar"
                transition:name="avatar"
                src={avatar.src}
                alt="Photo of Gil Creque in a pink TV"
                height="100px"
                width="100px"
                class="rounded-full"
              />
            </a>
            <h1 class="grow text-center">
              <img
                src="/img/worm.svg"
                width="24px"
                height="24px"
                class="inline"
                alt="Worm Icon"
              />{" "}
              <WiggleWrap>{title || frontmatter.title}</WiggleWrap>
            </h1>
          </>
        )
      }
    </header>
    <main class="px-2 w-screen max-w-3xl">
      <slot />
      <!-- your content is injected here -->
    </main>

    {
      isHome ? (
        <>
          <LatestNotes />
        </>
      ) : null
    }

    <Footer />
  </body><!-- End Document
    ––––––––––––––––––––––––––––––––––––––––––––––––––
-->
</html>
